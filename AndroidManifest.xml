<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackathon.free.place"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.hackathon.free.place.MainActivity"
            android:screenOrientation="sensorPortrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hackathon.free.place.RestaurantsListActivity"
            android:label="@string/app_name"
	    android:screenOrientation="sensorPortrait" >
        </activity>
        <meta-data android:value="@string/app_id" android:name="com.facebook.sdk.ApplicationId"/>
        <activity android:name="com.facebook.LoginActivity"
            	android:screenOrientation="sensorPortrait"></activity>
        <activity android:name="com.hackathon.free.place.RestaurantInfoActivity"
            	android:screenOrientation="sensorPortrait" ></activity>
    </application>

</manifest>
